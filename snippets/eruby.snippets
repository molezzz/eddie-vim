snippet dlayoutshow
	<%- model_class = Model -%>
	<div class="panel panel-default">
		<div class="panel-body" style="padding-bottom: 2em;">
			<div class="page-header">
				<h1>
					<%=${2:@model}.title %>
				</h1>

			</div>
			<div class="row clearfix">
				<div class="col-md-12">
					<div class="btn-toolbar pull-right" role="toolbar">
							<div class="btn-group">
							<%= link_to '返回' ,
										${3:models_path}, :class => 'btn btn-sm btn-default'	%>
							<%= link_to '编辑',
										${4:edit_model_path(@model)}, :class => 'btn btn-sm btn-default' %>
							<%= link_to '删除',
										${5:model_path(@model)},
										:method => 'delete',
										:data => { :confirm => '确实要删除吗？' },
										:class => 'btn btn-sm	btn-default' %>

							</div>
					</div>
			</div>
			</div>

			<p>
				<%=%{6:@model.content}%>
			</p>
		</div>
	</div>

snippet dlayoutcomment
	<h5>评论：</h5>
	<% @comments.each do |comment| %>
	<div class="media">
		<a class="pull-left" href="#">
			<img class="media-object" src="data:image/svg+xml;base64,">
		</a>
		<div class="media-body">
			<h4 class="media-heading"><%=comment.created_at.strftime('%Y-%m-%d')%></h4>

			<!-- Nested media object -->
			<div class="media">
				<%=comment.message%>
			</div>
		</div>
	</div>
	<% end %>



